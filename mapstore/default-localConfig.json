  "catalogServices": {
    "services": [
      {
        "type": "wms",
        "title": "GeoServer GIS Carbon WMS/WFS",
        "url": "http://geoserver:8080/geoserver/gis_carbon/wms",
        "version": "1.3.0",
        "format": "image/png",
        "transparent": true,
