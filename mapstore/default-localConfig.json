    "geoserver": {
      "url": "http://geoserver:8080/geoserver",
      "authEndpoint": "/rest/security/validate-token"
    },
    "fastapi": {
      "url": "http://fastapi:8000",
      "authEndpoint": "/auth/validate-token"
    }
